@model MvcAlecScripts.Models.ChallengesModel

@* name - challengeId - Description - Notes - Resources *@

<p>
    This is an introduction challenge to show how challenges work on alecscripts. 
</p>

<script>
    function changeToCode(){
        let ins = document.querySelector("#instructions")
        let tbox = document.createElement("textarea")
        tbox.placeholder = "Write Code Here..."
        ins.innerHTML = ""
        ins.setAttribute("class", "p-3")
        ins.appendChild(tbox)

    }
</script>

<div class="container">
        <a class="btn btn-dark"> Information </a>
    <button onclick="changeToCode()" class="btn btn-dark"> Code </button>
    <a class="btn btn-dark"> Help </a>
    <a class="btn btn-dark"> Comments </a>
    <a class="btn btn-dark"> Solutions </a>
</div>

<div class="border p-3" id="instructions">

    <h2>
        @Model.InstructionsTitle
    </h2>
    <h3>
        @Model.Subheader
    </h3>
    <p class=" bg-light p-3">
        @Model.Tags
    </p>
    <p>
        @Model.InstructionsInstructions
    </p>
    <h2>Examples</h2>
    <pre><code class="lang-md">@Model.InstructionsExamples</code></pre>
    
    <h2>Notes</h2>
    <pre><code class="lang-md">@Model.InstructionsNotes</code></pre>
</div>

<style>
    textarea{
        width: 100%;
        background: white;
        color: black;
        font-family: 'Courier New', Courier, monospace;
        border: 1px solid black;
        outline: 2px dotted grey;
        padding: 10px;
        min-height: 50vh;
        margin-bottom: 100px;
    }
    .test{
        transition: margin-left 1s ,background-color 1s;
    }
    .test:hover{
        margin-left: 10px;
        transition: margin-left .5s ,background-color .5s;
        background-color: rgb(1,1,1,.05);
    }
    .test:selected{
        outline: 2px dotted grey;
    }
</style>


