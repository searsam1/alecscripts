<section>
    <h2>
        Quadratic Equation Example 
    </h2>
    <pre><code class="lang-cpp">

#include &lt;cmath>
#include &lt;vector>
#include &lt;iostream>

std::vector&lt;float> quadratic(int a, int b, int c){
    
    float res1 = (-b + sqrt(pow(b,2) - 4*a*c)) / (2*a);
    float res2 = (-b - sqrt(pow(b,2) - 4*a*c)) / (2*a);
    return {res1, res2};
}

int main(){
        
    for (float res : quadratic(2,4,-9)){
        std::cout << res << "\n";
    }
    // 1.34521
    // -3.34521
}
</code></pre>
