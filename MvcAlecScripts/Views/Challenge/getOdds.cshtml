@model MvcAlecScripts.Models.ChallengeModel
@{
    ViewData["title"] = "Get Odds";
}

<h1 class="display-6">
    @Model.Name
</h1>
<div class="container">
    <div class="container">
        <p style="border-bottom: 1px solid black;">By <i>@Model.Author</i> in 
        <span class="text-danger">
            @Model.Language
        </span></p>
        <h4 class="mt-3">Description</h4>
        <p class="bg-light p-3">@Model.Description</p>
        <h4 class="mt-3">Examples</h4>
        <pre><code class="lang-@Model.Language">@Model.Examples</code></pre>
        <h4 class="mt-3">Notes</h4>
        <p class="bg-light p-3">@Model.Notes</p>
    </div>
</div>